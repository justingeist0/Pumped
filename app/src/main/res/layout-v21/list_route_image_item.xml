<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/colorTextButton"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp">

    <ImageView
        android:id="@+id/iv_list_route_image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/list_route_image_default" />

    <ImageView
        android:id="@+id/iv_list_route_image_source"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="false"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_add_route_add_image" />

</androidx.cardview.widget.CardView>
